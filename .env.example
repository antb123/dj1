# Django Secret Key
SECRET_KEY=your-secret-key-here

# Twilio Configuration
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here

# WhatsApp Configuration
# Format: whatsapp:+1234567890 or +1234567890
TWILIO_WHATSAPP_FROM_NUMBER=whatsapp:+13604747952

# Twilio Content Template SIDs (optional)
# Create templates at https://console.twilio.com/us1/develop/sms/content-editor
TWILIO_WHATSAPP_RECEIVER_INVITATION_TEMPLATE_SID=
TWILIO_WHATSAPP_RECEIVER_OTP_TEMPLATE_SID=

# Database (for production, replace with PostgreSQL or MySQL)
# DATABASE_URL=postgres://user:password@localhost:5432/dbname
